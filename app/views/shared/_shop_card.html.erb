
<div class="card">
  <div class="card-container">
    <div class="card-content">
      <div class="left">
        <h3><%= shop.name %></h3>
        <p><%= shop.location %></p>
        <button class="card-button">Button</button>
      </div>
      <div class="right">
        <%= image_tag(shop.image_url, class: "card-image") %>
      </div>
    </div>
  </div>
</div>
