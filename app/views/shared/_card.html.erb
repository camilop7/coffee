<div class="big-card">
  <div class="row">
    <% @roasters.each do |roaster| %>
      <div class="col-md-4">
        <div class="small-card">
          <img src="<%= roaster.image_url %>" class="card-img-top" alt="...">
          <div class="card-footer text-center py-4">
            <p class="card-text mb-2"><%= roaster.name %></p>
            <p class="card-text mb-2"><%= roaster.location %></p>
            <!-- Add any other properties you want to display -->
            <button class="btn btn-primary">View Details</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
